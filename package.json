{
  "name": "inventory-api",
  "version": "1.0.0",
  "description": "REST API de controle de estoque com Node.js, TypeScript, Express e MySQL",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
    "clean": "rm -rf package-lock.json node_modules dist",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "migration": "ts-node src/database/migration.ts",
    "test": "jest",
    "prod": "rm -rf dist && npm run build && pm2 start dist/src/server.js --name inventory-api",
    "stop": "pm2 stop inventory-api",
    "reset": "npm run stop && npm run prod",
    "restart": "pm2 restart inventory-api",
    "delete": "pm2 delete inventory-api"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.0",
    "helmet": "^8.0.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.12.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.7",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.7.0",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}
